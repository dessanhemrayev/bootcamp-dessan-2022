<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="line_number" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/form/group/group/field[@name='tax_id']" position="after">
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
            </xpath>

            <xpath
                expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
            </xpath>
        </field>
    </record>


    <record id="view_order_line_tree" model="ir.ui.view">
        <field name="name">sale.order.line.tree</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <!-- <xpath
                expr="//field[@name='order_id']" position="after" >
                <field name="line_number" />
            </xpath> -->
            <field name="order_id" position="before">
                <field name="line_number" />

            </field>
        </field>
    </record>


    <record id="sale_order_line_action" model="ir.actions.act_window">
        <field name="name">Sale Order Line</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="menu_sale_order_lines"
        name="Sale Order line"
        action="sale_order_line_action"
        parent="sale.sale_order_menu"
        sequence="10" />

</odoo>